{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../dist/out-tsc",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "types": [],
    "target": "ES2022"
  },
  "exclude": [
    "test-setup.ts",
    "**/*.spec.ts",
    "jest.config.ts",
    "**/*.test.ts",
    "cypress/**/*",
    "cypress.config.ts",
    "**/*.cy.ts",
    "**/*.cy.js",
    "**/*.cy.tsx",
    "**/*.cy.jsx"
  ],
  "include": ["**/*.ts"]
}
