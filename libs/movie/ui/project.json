{
  "name": "movie-ui",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/movie/ui",
  "prefix": "ult",
  "targets": {
    "build": {
      "executor": "@nx/angular:ng-packagr-lite",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "libs/movie/ui/ng-package.json",
        "updateBuildableProjectDepsInPackageJson": true
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/movie/ui/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/movie/ui/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "tsConfig": "libs/movie/ui/tsconfig.spec.json",
        "jestConfig": "libs/movie/ui/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "libs/movie/ui/**/*.ts",
          "libs/movie/ui/**/*.html",
          "libs/movie/ui/header/**/*.ts",
          "libs/movie/ui/header/**/*.html",
          "libs/movie/ui/user-score/**/*.ts",
          "libs/movie/ui/user-score/**/*.html",
          "libs/movie/ui/carousel/**/*.ts",
          "libs/movie/ui/carousel/**/*.html"
        ]
      }
    },
    "component-test": {
      "executor": "@nx/cypress:cypress",
      "options": {
        "cypressConfig": "libs/movie/ui/cypress.config.ts",
        "testingType": "component",
        "skipServe": true,
        "devServerTarget": "movie-db:build"
      }
    }
  },
  "tags": ["type:ui", "scope:movie"]
}
